<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <% unless @movies.empty? %>
        <h3 class="text-center">Movies! Yay!</h3>
        <table class="table table-striped table-hover">
          <tbody>
            <% @movies.each do |movie| %>
              <tr>
                <td>
                  <%= image_tag(movie.picture_url, class: "movie-logo") %>
                </td>
                <td>
                  <%= movie.title %>
                </td>
                <td>
                  <%= movie.description %>
                </td>
                <% if can? :edit, Movie %>
                  <td>
                    <%= link_to 'Edit movie', edit_movie_path(movie) %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h3 class="text-center">No movies!</h3>
      <% end %>
    </div>
  </div>
  <% if can? :new, Movie %>
    <%= link_to (fa_icon "plus-circle", text: 'Add new movie'), 
      new_movie_path %>
  <% end %>
</div>
