<% if can? :manage, User %>
  <h3 class="text-center">Unapproved owners' accounts</h3>
  <div class="list-group projects-list text-center" id="unapproved-owners-home">
    <% @users.where(approved: false, owner_role: true).each do |user| %>
      <%= link_to(user.name, edit_user_path(user), :class => "list-group-item") %>
    <% end %>
  </div>
<% end %>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <% unless @movies.empty? %>
        <h3 class="text-center">Movies! Yay!</h3>
        <table class="table table-striped table-hover">
          <tbody>
            <% @movies.each do |movie| %>
              <tr>
                <td>
                  <%= image_tag(movie.picture_url, class: "movie-logo") %>
                </td>
                <td>
                  <%= movie.title %>
                </td>
                <td>
                  <%= movie.description %>
                </td>              
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h3 class="text-center">No movies!</h3>
      <% end %>
    </div>
  </div>
</div>