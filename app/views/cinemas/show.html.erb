<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cinema.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @cinema.address %>
</p>

<p>
  <strong>User:</strong>
  <%= @cinema.user.name %>
</p>

<% unless @cinema.halls.empty? %>
  <h3 class="text-center">This Cinema's Halls!</h3>
  <table class="table table-striped table-hover">
    <tbody>
      <% @cinema.halls.each do |hall| %>
        <tr>
          <td>
            <%= link_to hall.name, cinema_hall_path(@cinema, hall) %>
          </td>
          <td>
            <%= link_to (fa_icon "pencil", text: 'Edit hall'),
              edit_cinema_hall_path(@cinema, hall) if can? :edit, Hall %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3 class="text-center">No halls!</h3>
<% end %>
<%= link_to (fa_icon "plus", text: "Add new hall"),
  new_cinema_hall_path(@cinema) if can? :new, Hall %>

<br><br>
<%= link_to (fa_icon "pencil-square-o", text: 'Edit cinema'),
  edit_cinema_path(@cinema) if can? :edit, @cinema %><br>
<%= link_to (fa_icon "arrow-left", text: 'Back'), root_path %>
