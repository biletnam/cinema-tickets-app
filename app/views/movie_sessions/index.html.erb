<p id="notice"><%= notice %></p>

<h1>Movie Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Dates</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_sessions.each do |movie_session| %>
      <tr>
        <td><%= movie_session.dates %></td>
        <td><%= movie_session.movie %></td>
        <td><%= link_to 'Show', movie_session %></td>
        <td><%= link_to 'Edit', edit_movie_session_path(movie_session) %></td>
        <td><%= link_to 'Destroy', movie_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

