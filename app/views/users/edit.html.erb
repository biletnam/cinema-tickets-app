<h2>Edit <%= @user.name %></h2>

<p><strong>name</strong>: <%= @user.name %></p>
<p><strong>email</strong>: <%= @user.email %></p>
<% if @user.owner_role? %>
  <p><strong>role</strong>: owner</p>
<% end %>


<%= simple_form_for(@user) do |f| %>
  <%= f.input :approved %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back", :back %>
